              <option data-content="Amis<i class=icon-friends></i>" value="1"></option>
              <option data-content="Publique<i class=icon-public></i>" value="2"></option>            
            </select>
          </div>
        </div>
        
        <div class="form-group">
              <label  class="col-sm-2 control-label"></label>
              <div class="col-sm-10">
                <button type="submit" id="btn" name="submit" value="Valider" class="box-button btn btn-default informations_btn">Suivant</button>
              </div>
            </div>

      </form>
    </div>
  </div>
